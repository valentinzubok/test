[newscount=1]
<div class="col-12">
<div class="card card-overlay-bottom card-grid-sm card-bg-scale" style="background-image:url({image-1}); background-position: center left; background-size: cover;">
<div class="card-img-overlay d-flex align-items-center p-3 p-sm-4"> 
<div class="w-100 mt-auto">
<a href="{category-url}" class="badge bg-warning mb-2"><i class="fas fa-circle me-2 small fw-bold"></i>{category}</a>
<h4 class="text-white h4"><a href="{full-link}" class="btn-link stretched-link text-reset">{title}</a></h4>
<ul class="nav nav-divider text-white-force align-items-center d-none d-sm-inline-block">
<li class="nav-item position-relative"><div class="nav-link">Автор: <a href="/user/{login}" class="stretched-link text-reset btn-link">{login}</a></div></li>
<li class="nav-item">{date}</li>
<li class="nav-item"><i class="far fa-comment-dots"></i> {comments-num}</li>
</ul>
</div></div></div></div>
[/newscount]
